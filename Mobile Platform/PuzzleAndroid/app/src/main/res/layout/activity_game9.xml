<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <ToggleButton
            android:id="@+id/sfx"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="sfxclick"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/sfxon"/>

        <ToggleButton
            android:id="@+id/music"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:onClick="musicclick"
            android:textOn=""
            android:textOff=""
            android:background="@drawable/musicon"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/record"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tScore"
                style="@style/textGameStyle15"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="30dp"
                android:textSize="@dimen/textBestScore15"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tBestScore"
                style="@style/textGameStyle15"
                android:layout_marginTop="30dp"
                android:layout_marginEnd="60dp"
                android:layout_marginRight="60dp"
                android:textSize="@dimen/textBestScore15"
                app:layout_constraintEnd_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/gameback">

            <GridLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:background="?android:attr/selectableItemBackground"
                android:columnCount="3"
                android:rowCount="3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageButton
                    android:id="@+id/b900"
                    style="@style/gridBGameStyle9"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_marginRight="@dimen/button_margin"
                    android:contentDescription="@string/button" />

                <ImageButton
                    android:id="@+id/b901"
                    style="@style/gridBGameStyle9"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginRight="@dimen/button_margin"
                    android:contentDescription="@string/button" />

                <ImageButton
                    android:id="@+id/b902"
                    style="@style/gridBGameStyle9"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:layout_marginRight="@dimen/button_margin"
                    android:contentDescription="@string/button" />

                <ImageButton
                    android:id="@+id/b910"
                    style="@style/gridBGameStyle9"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginTop="@dimen/button_margin"
                    android:layout_marginRight="@dimen/button_margin"
                    android:contentDescription="@string/button" />

                <ImageButton
                    android:id="@+id/b911"
                    style="@style/gridBGameStyle9"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginTop="@dimen/button_margin"
                    android:layout_marginRight="@dimen/button_margin"
                    android:contentDescription="@string/button" />

                <ImageButton
                    android:id="@+id/b912"
                    style="@style/gridBGameStyle9"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:layout_marginTop="@dimen/button_margin"
                    android:layout_marginRight="@dimen/button_margin"
                    android:contentDescription="@string/button" />

                <ImageButton
                    android:id="@+id/b920"
                    style="@style/gridBGameStyle9"
                    android:layout_row="2"
                    android:layout_column="0"
                    android:layout_marginTop="@dimen/button_margin"
                    android:layout_marginRight="@dimen/button_margin"
                    android:contentDescription="@string/button" />

                <ImageButton
                    android:id="@+id/b921"
                    style="@style/gridBGameStyle9"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_marginTop="@dimen/button_margin"
                    android:layout_marginRight="@dimen/button_margin"
                    android:contentDescription="@string/button" />

                <ImageButton
                    android:id="@+id/b922"
                    style="@style/gridBGameStyle9"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:layout_marginTop="@dimen/button_margin"
                    android:layout_marginRight="@dimen/button_margin"
                    android:contentDescription="@string/button" />
            </GridLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/gameback"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/hasil"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginEnd="2dp"
                    android:layout_marginRight="2dp"
                    android:layout_marginBottom="2dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/acak"
                android:layout_width="95dp"
                android:layout_height="68dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/acakbtn"
                app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="32dp"
                android:layout_marginRight="32dp"
                android:background="@drawable/homebtn"
                app:layout_constraintEnd_toStartOf="@+id/constraintLayout"
                app:layout_constraintTop_toBottomOf="@+id/acak" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</RelativeLayout>
